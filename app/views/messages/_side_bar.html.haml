.side-bar
  .side-bar__user-name
    .top-items
      .top-items__names
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__icons-edit" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "top-items__icons-cog" do
          = icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group-list
        = link_to group_messages_path(group) do
          .side-bar__group-list__name
            = group.name
          .side-bar__group-list__message
            = group.show_last_message